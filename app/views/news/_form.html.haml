= form_for(@news) do |f|
  - if @news.errors.any?
    #error_explanation
      %h2
        = pluralize(@news.errors.count, "error")
        prohibited this news from being save:
      %ul
        - @news.errors.full_messages.each do |msg|
          %li = msg
  .field
    = f.label :title
    %br/
    = f.text_field :title
  .field
    = f.label :link
    %br/
    = f.text_field :link
  .actions
    = f.submit